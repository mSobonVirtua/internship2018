{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ product.info }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td><a href="{{ path('product_category_show', {'id': product.category.id}) }}">{{  product.category.name }}</a></td>
            </tr>
            <tr>
                <th>CreatedDate</th>
                <td>{{ product.createdDate ? product.createdDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedDate</th>
                <td>{{ product.modifiedDate ? product.modifiedDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td><a href="{{ path('product_category_new',{'id':product.id}) }}">product_category.name</a></td>
            </tr>
            <tr>
                <th>Actions</th>
                <td><a class="btn btn-success" href="{{ path('WishListNew', {'productId': product.id}) }}">Add to WishList</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}