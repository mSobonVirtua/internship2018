{% extends 'base.html.twig' %}

{% block title %}Categories list{% endblock %}

{% block body %}

    {% for message in app.flashes('notice') %}
        <div class="alert alert-success alert-dismissible fade show">
            {{ message }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show">
            {{ message }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        </div>
    {% endfor %}

    <h1>ProductCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>DateOfCreation</th>
                <th>DateOfLastModification</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product_category in product_categories %}
            <tr>
                <td>{{ product_category.id }}</td>
                <td>{{ product_category.name }}</td>
                <td>{{ product_category.description }}</td>
                <td>{{ product_category.dateOfCreation ? product_category.dateOfCreation|date('Y-m-d') : '' }}</td>
                <td>{{ product_category.dateOfLastModification ? product_category.dateOfLastModification|date('Y-m-d') : '' }}</td>
                <td><img src="{{ asset('uploads/images/' ~ product_category.mainImage) }}" class="img-thumbnail img-100"></td>
                <td>
                    <a href="{{ path('product_category_show', {'id': product_category.id}) }}">show</a>
                    <a href="{{ path('product_category_edit', {'id': product_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_category_new') }}">Create new</a>
{% endblock %}